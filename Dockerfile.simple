# Simple Dockerfile that works
FROM node:20-alpine

WORKDIR /app

# Copy and install deps
COPY package*.json ./
RUN npm ci --production=false

# Copy everything
COPY . .

# Use simple PostCSS config for build
RUN mv postcss.config.simple.js postcss.config.js

# Build
RUN npm run build

# Expose port
EXPOSE ${PORT:-3001}

# Start simple server
CMD ["node", "server/simple-server.js"]