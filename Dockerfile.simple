# Simple Dockerfile that works
FROM node:20-alpine

WORKDIR /app

# Copy and install deps
COPY package*.json ./
RUN npm ci --production=false

# Copy everything
COPY . .

# Build directly with Vite (skip prebuild validation)
RUN npx vite build

# Expose port
EXPOSE ${PORT:-3001}

# Start simple server
CMD ["node", "server/simple-server.js"]